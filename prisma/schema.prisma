  // ========================================
  bookings        VehicleBooking[]
  reviews         Review[]
  unavailableDates UnavailableDate[]
  maintenanceRecords MaintenanceRecord[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([city, country])
  @@index([type])
  @@index([basePrice])
  @@index([ownerId])
  @@index([approvalStatus])
  @@index([available])
  @@index([rating])
}

